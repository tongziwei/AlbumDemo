<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_gallery_preview_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/ibtn_gallery_preview_enter"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@mipmap/ic_enter"/>

    <TextView
        android:id="@+id/tv_gallery_preview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#EE2B2B2B"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_gallery_preview_image"
        android:layout_toLeftOf="@id/ibtn_gallery_preview_enter"
        android:layout_toRightOf="@id/iv_gallery_preview_image"
        android:layout_toStartOf="@id/ibtn_gallery_preview_enter"
        android:ellipsize="end"
        android:maxLines="1"/>
</RelativeLayout>